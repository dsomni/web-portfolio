---
import { url } from "@/utils/url";
import Link from "./Link.astro";

interface Props {
  filename: string;
  label: string;
  colorScheme?: "primary" | "accent";
  variant?: "filled" | "outline";
  size?: "sm" | "md";
}

const {
  filename,
  label,
  colorScheme = "primary",
  variant = "filled",
  size = "md",
} = Astro.props;
---

<Link
  href={url(`/files/${filename}`)}
  icon="mdi:file-outline"
  label={label}
  colorScheme={colorScheme}
  variant={variant}
  size={size}
  ariaLabel={label}
/>
