---
import Icon from "node_modules/astro-icon/components/Icon.astro";
import { useTranslations, type Language } from "../../utils/i18n";
import { url } from "../../utils/url";
import PDFButton from "../ui/PDFButton.astro";
import Button from "../ui/Button.astro";
import Link from "../ui/Link.astro";

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
const yearsOfExperience = currentYear - 2023;
---

<section
  id="hero"
  class="relative min-h-screen flex items-center justify-center pt-10 pb-16 overflow-hidden"
>
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div class="space-y-8 animate-fade-up">
        <div class="flex items-start justify-between gap-6 lg:block">
          <div class="space-y-4 flex-1">
            <p
              class="text-primary-600 dark:text-primary-400 font-medium text-lg tracking-wide uppercase"
            >
              {t("hero.greeting")}
            </p>
            <h1
              class="text-4xl md:text-6xl lg:text-7xl font-bold text-light-text dark:text-dark-text leading-tight"
            >
              <span class="block">{t("personal.name")}</span>
              <span class="block text-gradient-primary"
                >{t("personal.surname")}</span
              >
            </h1>
            <h2
              class="text-xl md:text-3xl font-semibold text-light-text-muted dark:text-dark-text-muted"
            >
              {t("personal.specialty")}
            </h2>
          </div>

          <!-- Mobile Image -->
          <div class="relative flex-shrink-0 lg:hidden">
            <div class="relative w-36 h-36 sm:w-48 sm:h-48">
              <div
                class="absolute inset-0 bg-gradient-to-br from-primary-500 to-accent-500 rounded-full blur-xl opacity-30"
              >
              </div>

              <div
                class="relative overflow-hidden rounded-full w-full h-full ring-2 ring-light-bg dark:ring-dark-bg shadow-lg"
              >
                <img
                  src={url("/images/profile/photo.jpg")}
                  alt={t("personal.fullname")}
                  class="w-full h-full object-cover"
                  loading="eager"
                />
              </div>
            </div>
            <div
              class="absolute -bottom-8 left-1/2 -translate-x-1/2 card p-2 px-4 shadow-xl animate-float animation-delay-400 border-2 border-green-500/20"
            >
              <div class="flex items-center gap-2">
                <span class="relative flex h-2 w-2">
                  <span
                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
                  ></span>
                  <span
                    class="relative inline-flex rounded-full h-2 w-2 bg-green-500"
                  ></span>
                </span>
                <div
                  class="text-xs font-semibold text-green-600 dark:text-green-400"
                >
                  Available
                </div>
              </div>
            </div>
          </div>
        </div>

        <div
          class="flex flex-col gap-4 text-lg text-light-text-muted dark:text-dark-text-muted max-w-2xl leading-relaxed"
        >
          <span>{t("hero.description")}</span>
          <span>{t("hero.subDescription")}</span>
        </div>

        <!-- Skills -->
        <div class="flex flex-wrap gap-2">
          {
            [
              "AI Research",
              "Data Science",
              "ML Optimization",
              "LLM",
              "Deep Learning",
            ].map((skill) => <span class="badge text-xs">{skill}</span>)
          }
        </div>

        <div class="space-y-4 pt-2">
          <!-- CTA Buttons - Using Button component for internal navigation -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <Button
              href="#projects"
              icon="mdi:arrow-right"
              iconPosition="right"
              variant="primary"
            >
              {t("hero.cta.primary")}
            </Button>
            <Button
              href="#contact"
              icon="mdi:email-outline"
              iconPosition="left"
              variant="secondary"
            >
              {t("hero.cta.secondary")}
            </Button>
          </div>

          <!-- Divider -->
          <div class="flex items-center gap-4 py-2">
            <div
              class="h-px flex-1 bg-gradient-to-r from-transparent via-light-text-muted/20 to-transparent dark:via-dark-text-muted/20"
            >
            </div>
            <span
              class="text-xs text-light-text-muted dark:text-dark-text-muted uppercase tracking-wider font-medium"
            >
              {t("hero.cta.resume")}
            </span>
            <div
              class="h-px flex-1 bg-gradient-to-r from-transparent via-light-text-muted/20 to-transparent dark:via-dark-text-muted/20"
            >
            </div>
          </div>

          <!-- CV Downloads - Using PDFButton (which uses Link internally) -->
          <div class="grid grid-cols-2 gap-3">
            <PDFButton
              filename="cv/en.pdf"
              label="CV (EN)"
              colorScheme="primary"
            />
            <PDFButton
              filename="cv/ru.pdf"
              label="CV (RU)"
              colorScheme="accent"
            />
          </div>
        </div>
      </div>

      <!-- Desktop Profile Image -->
      <div class="relative hidden lg:block animate-fade-up animation-delay-200">
        <div class="relative z-10">
          <div class="relative w-full max-w-md mx-auto aspect-square">
            <div
              class="absolute inset-0 bg-gradient-to-br from-primary-500 to-accent-500 rounded-3xl blur-3xl opacity-20 animate-pulse-slow"
            >
            </div>

            <div class="relative card card-hover overflow-hidden rounded-3xl">
              <img
                src={url("/images/profile/photo.jpg")}
                alt={t("personal.fullname")}
                class="w-full h-full object-cover"
                loading="eager"
              />
            </div>
          </div>

          <!-- Education Badge - Top Right (Most prominent) -->
          <div
            class="absolute -top-4 -right-4 card p-4 shadow-xl animate-float animation-delay-100"
          >
            <div class="flex items-center gap-3">
              <div class="p-2 rounded-lg bg-primary-100 dark:bg-primary-900/30">
                <Icon
                  class="w-6 h-6 text-primary-600 dark:text-primary-400"
                  name="mdi:school-outline"
                />
              </div>
              <div>
                <div
                  class="text-xl font-bold text-primary-600 dark:text-primary-400"
                >
                  BSc
                </div>
                <div
                  class="text-xs text-light-text-muted dark:text-dark-text-muted font-medium"
                >
                  AI & DS
                </div>
              </div>
            </div>
          </div>

          <!-- Experience Badge - Bottom Left -->
          <div
            class="absolute -bottom-4 -left-4 card p-4 shadow-xl animate-float animation-delay-300"
          >
            <div class="flex items-center gap-3">
              <div class="p-2 rounded-lg bg-accent-100 dark:bg-accent-900/30">
                <Icon
                  class="w-6 h-6 text-accent-600 dark:text-accent-400"
                  name="mdi:calendar-clock"
                />
              </div>
              <div>
                <div
                  class="text-xl font-bold text-accent-600 dark:text-accent-400"
                >
                  {yearsOfExperience}+ years
                </div>
                <div
                  class="text-xs text-light-text-muted dark:text-dark-text-muted font-medium"
                >
                  Experience
                </div>
              </div>
            </div>
          </div>

          <!-- Availability Status - Top Center (Different style for emphasis) -->
          <div
            class="absolute -top-6 left-1/2 -translate-x-1/2 card p-2 px-4 shadow-xl animate-float animation-delay-400 border-2 border-green-500/20"
          >
            <div class="flex items-center gap-2">
              <span class="relative flex h-2 w-2">
                <span
                  class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
                ></span>
                <span
                  class="relative inline-flex rounded-full h-2 w-2 bg-green-500"
                ></span>
              </span>
              <div
                class="text-xs font-semibold text-green-600 dark:text-green-400"
              >
                Available for Communication
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse-slow {
    0%,
    100% {
      opacity: 0.15;
    }
    50% {
      opacity: 0.25;
    }
  }

  .animation-delay-100 {
    animation-delay: 0.1s;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-300 {
    animation-delay: 0.3s;
  }
</style>
