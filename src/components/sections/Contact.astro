---
import { Icon } from "astro-icon/components";
import { useTranslations, type Language } from "../../utils/i18n";
import { getCollection } from "astro:content";
import SocialLink from "../ui/SocialLink.astro";

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const socials = (await getCollection("social"))
  .map((entry: any) => entry.data)
  .sort((a: any, b: any) => (a.order ?? 999) - (b.order ?? 999));
---

<section id="contact" class="py-20">
  <div class="container-custom">
    <h2 class="section-title text-center animate-on-scroll">
      {t("section.contact")}
    </h2>

    <div class="max-w-4xl mx-auto">
      <p
        class="text-center text-lg text-light-text-muted dark:text-dark-text-muted mb-12 animate-on-scroll animation-delay-100"
      >
        {t("contacts.target")}
      </p>

      <!-- Social Media Cards Grid -->
      <div
        class="grid md:grid-cols-2 gap-6 animate-on-scroll animation-delay-200"
      >
        {
          socials.map((social: any, index: number) => (
            <SocialLink
              social={social}
              lang={lang}
              variant="card"
              index={index}
            />
          ))
        }
      </div>

      <!-- Primary Email CTA -->
      <div class="mt-12 text-center animate-on-scroll animation-delay-300">
        <a
          href="mailto:d.beresnev.work@gmail.com"
          class="inline-flex items-center gap-3 px-8 py-4 text-lg font-medium rounded-lg bg-primary-600 hover:bg-primary-700 dark:bg-primary-500 dark:hover:bg-primary-600 text-white transition-all duration-300 hover:shadow-lg hover:scale-105 group relative overflow-hidden"
        >
          <!-- Animated background gradient -->
          <div
            class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent translate-x-[-200%] group-hover:translate-x-[200%] transition-transform duration-700"
          >
          </div>

          <!-- Content -->
          <span class="relative z-10 flex items-center gap-3">
            <Icon
              name="mdi:email-outline"
              class="w-6 h-6 transition-transform duration-300 group-hover:scale-110"
            />
            <span>{t("contacts.emailMe")}</span>
          </span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  a[href^="mailto:"] {
    box-shadow:
      0 2px 4px -1px rgba(0, 0, 0, 0.06),
      0 1px 2px -1px rgba(0, 0, 0, 0.04);
  }

  a[href^="mailto:"]:hover {
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
</style>
