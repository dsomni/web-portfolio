---
import { Icon } from "astro-icon/components";
import { useTranslations, type Language } from "../../utils/i18n";
import { getCollection } from "astro:content";
import SocialLink from "../ui/SocialLink.astro";

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const socials = (await getCollection("social"))
  .map((entry: any) => entry.data)
  .sort((a: any, b: any) => (a.order ?? 999) - (b.order ?? 999));
---

<section id="contact" class="py-20">
  <div class="container-custom">
    <h2 class="section-title text-center animate-on-scroll">
      {t("section.contact")}
    </h2>

    <div class="max-w-4xl mx-auto">
      <p
        class="text-center text-lg text-light-text-muted dark:text-dark-text-muted mb-12 animate-on-scroll"
      >
        {t("contacts.target")}
      </p>

      <div class="grid md:grid-cols-2 gap-6">
        {
          socials.map((social: any, index: number) => (
            <SocialLink
              social={social}
              lang={lang}
              variant="card"
              index={index}
            />
          ))
        }
      </div>

      <div class="mt-12 text-center animate-on-scroll">
        <a
          href="mailto:d.beresnev.work@gmail.com"
          class="btn btn-primary text-lg px-8 py-4 inline-flex items-center gap-3"
        >
          <Icon name="mdi:email-outline" class="w-6 h-6" />
          <span>{t("contacts.emailMe")}</span>
        </a>
      </div>
    </div>
  </div>
</section>
