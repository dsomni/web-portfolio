---
import { useTranslations, type Language } from "../../utils/i18n";

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/dsomni",
    icon: "github",
  },
  {
    name: "Telegram",
    url: "https://t.me/dsomni", // Update with actual link
    icon: "telegram",
  },
  {
    name: "Email",
    url: "mailto:d.beresnev.work@gmail.com",
    icon: "email",
  },
];

const currentYear = new Date().getFullYear();
---

<footer
  class="mt-20 border-t border-light-border dark:border-dark-border bg-light-surface dark:bg-dark-surface"
>
  <div class="container-custom py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div class="space-y-4">
        <div class="flex items-center gap-2">
          <div
            class="w-10 h-10 rounded-lg bg-gradient-to-br from-primary-600 to-accent-600 flex items-center justify-center text-white font-bold text-lg"
          >
            DB
          </div>
          <span class="font-bold text-lg">Dmitry Beresnev</span>
        </div>
        <p class="text-sm text-light-text-muted dark:text-dark-text-muted">
          {
            lang === "en"
              ? "ML Engineer & Data Scientist"
              : "ML-инженер и Data Scientist"
          }
        </p>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h3
          class="font-semibold text-sm uppercase tracking-wider text-light-text dark:text-dark-text"
        >
          {lang === "en" ? "Quick Links" : "Быстрые ссылки"}
        </h3>
        <ul class="space-y-2">
          <li>
            <a
              href={lang === "en" ? "/" : "/ru"}
              class="text-sm text-light-text-muted dark:text-dark-text-muted hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              {t("nav.home")}
            </a>
          </li>
          <li>
            <a
              href={lang === "en" ? "/projects" : "/ru/projects"}
              class="text-sm text-light-text-muted dark:text-dark-text-muted hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              {t("nav.projects")}
            </a>
          </li>
          <li>
            <a
              href={lang === "en" ? "/#about" : "/ru/#about"}
              class="text-sm text-light-text-muted dark:text-dark-text-muted hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              {t("nav.about")}
            </a>
          </li>
          <li>
            <a
              href={lang === "en" ? "/#contact" : "/ru/#contact"}
              class="text-sm text-light-text-muted dark:text-dark-text-muted hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              {t("nav.contact")}
            </a>
          </li>
        </ul>
      </div>

      <!-- Social Links -->
      <div class="space-y-4">
        <h3
          class="font-semibold text-sm uppercase tracking-wider text-light-text dark:text-dark-text"
        >
          {lang === "en" ? "Connect" : "Связаться"}
        </h3>
        <div class="flex gap-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full bg-light-elevated dark:bg-dark-elevated flex items-center justify-center text-light-text dark:text-dark-text hover:bg-primary-600 hover:text-white dark:hover:bg-primary-500 transition-all hover:scale-110"
                aria-label={social.name}
              >
                {social.icon === "github" && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                )}
                {social.icon === "telegram" && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z" />
                  </svg>
                )}
                {social.icon === "email" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="mt-8 pt-8 border-t border-light-border dark:border-dark-border flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-sm text-light-text-muted dark:text-dark-text-muted">
        © {currentYear} Dmitry Beresnev. {t("footer.rights")}.
      </p>
      <p class="text-sm text-light-text-muted dark:text-dark-text-muted">
        {t("footer.built")}
      </p>
    </div>
  </div>
</footer>
